<p id="notice"><%= notice %></p>

<h1>貯金 現在の残高 <%= number_with_delimiter(Saving.cal_balance(@current_user.id))%>円  <%=@message%></h1>
<h2><%= link_to '新しく入力', new_saving_path %></h2>

    <%= form_tag('/savings_search') do %>
    <p>
    年&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;月
    <br>
    <%= text_field_tag 'search[year]',  @year %><%= text_field_tag'search[month]', @month%>
    <!--<%= select_tag'search[:year]'%><%= select_tag'search[:month]'%>-->
    <%=submit_tag'検索' %>
    </p>
    <%end%>

<table>
  <thead>
    <tr>
      <!--<th>アカウントID</th>-->
      <th>年月日</th>
      <th>支出</th>
      <th>収入</th>
      <th>残高</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @cal_pay = 0 %>
  <% @cal_income = 0 %>
    <% @savings.each do |saving| %>
      <tr>
        <!--<td><%= saving.account_id %></td>-->
        <td><%= saving.income_pay_date %></td>
        <td><%= number_with_delimiter(saving.pay) %></td>
        <td><%= number_with_delimiter(saving.income) %></td>

        <% if saving.pay  %>
        <% @cal_pay = @cal_pay + saving.pay %>
        <% end %>

        <% if saving.income  %>
        <% @cal_income = @cal_income + saving.income %>
        <% end %>

        <td><%= number_with_delimiter(@cal_income - @cal_pay) %></td>
        <td><%= link_to '確認', saving %></td>
        <td><%= link_to '編集', edit_saving_path(saving) %></td>
        <td><%= link_to '削除', saving, method: :delete, data: { confirm: '本当に消去しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>