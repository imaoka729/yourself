<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2>エラーが発生しました:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :カテゴリー名 %>
    <%= form.text_field :category_name %>
  </div>

  <div class="actions">
    <%= form.submit "追加" %>
  </div>
<% end %>
