<p id="notice"><%= notice %></p>

<h1>カテゴリー一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>カテゴリー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.user_id %></td>
        <td><%= category.category_name %></td>
        <td><%= link_to '変更', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

