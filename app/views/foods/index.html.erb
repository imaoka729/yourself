<p id="notice"><%= notice %></p>

<h1>食品一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>食品名</th>
      <th>カテゴリー</th>
      <th>賞味・消費</th>
      <th>期限日</th>
      <th>購入日</th>
      <th>個数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.user_id %></td>
        <td><%= food.food_name %></td>
        <td><%= food.category.category_name %></td>
        <% if food.syoumi_syouhi == 0 %>
          <td>賞味期限</td>
        <% else %>
          <td>消費期限</td>
        <% end %>
        <td><%= food.expiration_date %></td>
        <td><%= food.purchase_date %></td>
        <td><%= food.quantity %>個</td>
        <td><%= link_to '詳細', food %></td>
        <td><%= link_to '編集', edit_food_path(food) %></td>
        <td><%= link_to '削除', food, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_food_path %> |
<%= link_to "ログアウト", logout_path, method: :delete %>