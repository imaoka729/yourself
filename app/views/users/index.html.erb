<p id="notice"><%= notice %></p>

<h1>管理者画面</h1>

<table>
  <thead>
    <tr>
      <th>アカウントID</th>
      <th>パスワード</th>
      <th>利用者名</th>
      <th>管理者判別</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account_id %></td>
        <td><%= user.passward %></td>
        <td><%= user.user_name %></td>
        <td><%= user.admin %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

